{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "module": "commonjs",
      "declaration": false,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "target": "es2017",
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": "./",
      "incremental": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "esModuleInterop": true
    },
    "include": ["src/**/*", "webpack.*.ts"],
    "exclude": ["node_modules", "dist"]
  }